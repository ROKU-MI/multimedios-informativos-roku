<?xml version="1.0" encoding="utf-8" ?>
<component name="EpisodePickerScene" extends="Scene">
    <interface>
        <field id="content" type="node" />
    </interface>

    <children>

        <Label id="titleLabel"
               translation="[90,40]"
               width="1740" height="80"
               font="MediumBoldSystemFont"
               horizAlign="left" />


        <PosterGrid id="episodeGrid"
                    translation="[90,150]"
                    width="1740" height="540"
                    itemSize="300,170"
                    numColumns="5"
                    itemSpacing="30,30"
                    drawFocusFeedback="true" />
    </children>

    <script type="text/brightscript" uri="EpisodePickerScene.brs" />
</component>
